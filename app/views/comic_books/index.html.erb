<h1>All Comics</h1>

<table>
	<tr>
		<th>Title</th>
		<th>Issue</th>
		<th>Volume</th>
		<th>Year</th>
	</tr>	
	<% @comic_books.each do |cb| %>
	<tr>
		<td><%= cb.title %></td>
		<td><%= cb.issue %></td>
		<td><%= cb.volume %></td>
		<td><%= cb.year %></td>
		<td><%= link_to "Show", comic_book_path(cb) %></td>
		<td><%= link_to "Edit", edit_comic_book_path(cb) %></td>
		<td><%= link_to "Delete", cb, :method => :delete, :confirm => "Are you sure?",
		                                :title => "Delete #{cb.title}", 
										:remote=>true, :class=>'delete_comic_book' %></td>
	</tr>
	<% end %>
</table>

<br />
<%= link_to "Add new comic book", new_comic_book_path %>