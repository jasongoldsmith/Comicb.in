<div class='nested-fields'>
	<% f.inputs do %>
		<%= f.input :first_name %>
		<%= f.input :last_name %>
		<h3> Roles </h3>
		<div id='Roles'>
			<% f.semantic_fields_for :contributions do |f| %>
				<%= render 'contribution_fields', :f => f %>
				<div class='links'>
					<%= link_to_add_association "add role", f, :role %>
				</div>
			<% end %>
		</div>				
	<li>
		<%= label_tag '' %>
		<%= link_to_remove_association "remove contributor", f %>
	</li>
	<% end %>
</div>